@model List<IntroductionMVC5.Models.Integrator.Customer>

@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table style="border-bottom: 1px solid #5D5A53; float: left; width: 100%;">
    <tr>
        <td style="width: 50%">
            <input type="submit" class="btn btn-primary" value="Add Customer" onclick=" location.href='@Url.Action("Create", "Customer")    ' " />
        </td>
        <td style="margin: 5px; text-align: right; width: 100%;">
            @{ Html.RenderPartial("_NameSearch", "Customer");}
        </td>
    </tr>
</table>

<h3>All Customers</h3>
<script src="@Url.Content("~/Scripts/jquery-1.10.2.js")" type="text/javascript"></script>
<div data-bind="template: {name:'customer', foreach:customers}" id="album-list" style="width: 100%">
</div>

<table class="table table-bordered">
    <thead>
        <tr class="info">
            <th>
                Customer Name
            </th>
            <th>
                Customer Code
            </th>

            <th>
                Phone Nunber
            </th>
            <th>
                Address
            </th>
            <th></th>
        </tr>
    </thead>

    @foreach (var item in Model)
{
    <tr class="active">
        <td>
            @Html.DisplayFor(modelItem => item.CustomerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Suppliercode)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.TellNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            <input type="submit" class="btn btn-info btn-xs" value="Details" onclick=" location.href='@Url.Action("Details", "Customer", new { id = item.Id }) ' " />
        </td>
    </tr>
}
</table>
