@model IntroductionMVC5.Models.Integrator.Booking
@{
    ViewBag.Title = "Add booking";
}
<script src="@Url.Content("~/Scripts/jquery-1.10.2.js")" type="text/javascript"></script>
<script>
    $(function () {
        $("#datepicker").datetimepicker();
    });
</script>
<h2>Add booking</h2>
@using (Html.BeginForm("AddBooking", "Customer", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        @Html.HiddenFor(m => m.Customer.CompanyRegNumber)
        @Html.HiddenFor(m => m.Customer.Id)
        @Html.HiddenFor(m => m.Customer.CustomerName)
        @Html.HiddenFor(m => m.Transporter.Name)
        <div class="form-group">
            @Html.LabelFor(model => model.Reference)
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.Reference, new { @style = "  color: #5E5B54; font-weight: bold; margin: 5px; padding-left: 2px", @class = "form-control", @type = "text" })
            @Html.ValidationMessageFor(model => model.Reference)
        </div>
        <div class="form-group">
            <label>Transporter</label>
            @Html.DropDownList("Transporter.Id", (SelectList)ViewBag.Id, string.Empty, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.DateIn)
        </div>
        <div class="form-group">

            @Html.TextBoxFor(model => model.DateIn, new { @style = "  color: #5E5B54; font-weight: bold; margin: 5px; padding-left: 2px", id = "datepicker", @class = "form-control", @type = "text" })
            @Html.ValidationMessageFor(model => model.DateIn)
        </div>
        <p>
            <button class="btn btn-primary" value="Create" onclick=" location.href='@Url.Action("AddBooking", "Customer")' ">Save</button>
            <input class="btn btn-primary" type="button" onclick=" location.href='@Url.Action("Details", "Customer", new { id = @Model.Customer.Id })' " value=" back" />
        </p>
    </fieldset>
}