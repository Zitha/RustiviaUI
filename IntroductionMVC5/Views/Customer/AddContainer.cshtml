@model IntroductionMVC5.Models.Integrator.Container
@{
    ViewBag.Title = "Add Container";
}
<script src="@Url.Content("~/Scripts/jquery-1.10.2.js")" type="text/javascript"></script>
<script>
    $(function () {
        $("#datepicker").datepicker();
    });
</script>

<h2>Add Conatiner</h2>
@using (Html.BeginForm("AddContainer", "Customer", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        @Html.HiddenFor(m => m.Booking.Reference)
        @Html.HiddenFor(m => m.Booking.DateIn)
        @Html.HiddenFor(m => m.Booking.DateOut)
        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.GrossWeight)
        <div class="form-group">
            <label>Booking Reference</label>
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.Booking.Reference, new { @style = "  color: #5E5B54; font-weight: bold; margin: 5px; padding-left: 2px", @class = "form-control", @type = "text", @readonly = "readonly" })
        </div>
        <div class="form-group">
            <label>Transporter</label>
        </div>
        <div class="form-group">
            @if (@Model.Booking.Transporter != null)
            {
                @Html.TextBoxFor(model => model.Booking.Transporter.Name, new { @style = "  color: #5E5B54; font-weight: bold; margin: 5px; padding-left: 2px", @class = "form-control", @type = "text", @readonly = "readonly" })
            }
        </div>
        <div class="form-group">
            <label>Depot name</label>
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.DepotName, new { @style = "  color: #5E5B54; font-weight: bold; margin: 5px; padding-left: 2px", @class = "form-control", @type = "text"})
        </div>
        <div class="form-group">
            <label>Delivery number</label>
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.DeliveryNote, new { @style = "  color: #5E5B54; font-weight: bold; margin: 5px; padding-left: 2px", @class = "form-control", @type = "text" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ContainerNumber)
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.ContainerNumber, new { @style = "  color: #5E5B54; font-weight: bold; margin: 5px; padding-left: 2px", @class = "form-control", @type = "text" })
            @Html.ValidationMessageFor(model => model.ContainerNumber)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DateIn)
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.DateIn, new { @style = "  color: #5E5B54; font-weight: bold; margin: 5px; padding-left: 2px", id = "datepicker", @class = "form-control", @type = "text" })
            @Html.ValidationMessageFor(model => model.DateIn)
        </div>

        <div class="form-group" hidden="hidden">
            @Html.LabelFor(model => model.GrossWeight)
        </div>
        <div class="form-group" hidden="hidden">
            @Html.TextBoxFor(model => model.GrossWeight, new { @style = "  color: #5E5B54; font-weight: bold; margin: 5px; padding-left: 2px", @class = "form-control", @type = "text" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Product)
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.Product, new { @style = "  color: #5E5B54; font-weight: bold; margin: 5px; padding-left: 2px", @class = "form-control", @type = "text" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Sealnumber)
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.Sealnumber, new { @style = "  color: #5E5B54; font-weight: bold; margin: 5px; padding-left: 2px", @class = "form-control", @type = "text" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TareWeight)
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.TareWeight, new { @style = "  color: #5E5B54; font-weight: bold; margin: 5px; padding-left: 2px", @class = "form-control", @type = "text" })
        </div>
        <p>
            <button class="btn btn-primary" value="Create" onclick=" location.href='@Url.Action("AddContainer", "Customer")' ">Save</button>
            <input class="btn btn-primary" type="button" onclick=" location.href='@Url.Action("Details", "Customer", new {id = @Model.Booking.Customer.Id})' " value=" back" />
        </p>
    </fieldset>
}