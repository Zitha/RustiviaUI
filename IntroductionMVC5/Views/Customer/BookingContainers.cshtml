@using IntroductionMVC5.Models
@using IntroductionMVC5.Web.Utils
@model IntroductionMVC5.Models.Integrator.Booking

<script src="@Url.Content("~/Scripts/jquery-1.10.2.js")" type="text/javascript"></script>
<div style="margin-top: 10px">
    <input style="margin-top: 5px" class="btn btn-primary" type="button" onclick=" location.href='@Url.Action("Details", "Customer", new { id = @Model.Customer.Id })    ' " value=" back" />
</div>

<h3>Container(s) for booking @Html.ActionLink(@Model.Reference, "Details", new { id = @Model.Customer.Id }, new { @style = "  color: #F6855E;" })</h3>
<div>
    <div class="alert alert-dismissable alert-info" style="width: 30%">
        Click on container number to view Loading Sheet
    </div>
    <table class="table table-bordered" style="margin-bottom: 20px; margin-top: 10px">
        <thead>
            <tr>
                <th></th>
                <th>
                    @string.Format("Container number")
                </th>
                <th>
                    @string.Format("Seal number")
                </th>
                <th>
                    @string.Format("Gross weight")
                </th>
                <th>
                    @string.Format("Tare weight")
                </th>
                <th>
                    @string.Format("Nett weight")
                </th>
                <th>
                    @string.Format("Product")
                </th>
                <th>
                    @string.Format("Date in")
                </th>
                <th>
                    @string.Format("Status")
                </th>
            </tr>
        </thead>
        @foreach (var item in Model.Containers)
        {
            <tr>
                @if (item.Status == Statuses.Waiting || item.Status == Statuses.FirstWeight)
                {
                    <td>
                        <a class="btn btn-info btn-xs" href="@Url.Action("EditContainer", "Customer", new {id = item.Id})">Edit</a>
                    </td>
                    <td>
                        @Html.ActionLink(string.Format("{0}", item.ContainerNumber), "LoadingSheet", "Container", new { id = item.Id }, new { @style = "  color: #F6855E;" })
                    </td>
                    <td>
                        @Html.DisplayFor(modelitem => item.Sealnumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelitem => item.GrossWeight)
                    </td>
                    <td style="margin-right: 150px">
                        @Html.DisplayFor(modelitem => item.TareWeight)
                    </td>
                    <td style="margin-right: 150px">
                        @Html.DisplayFor(modelitem => item.NettWeight)
                    </td>
                    <td style="margin-right: 150px">
                        @Html.DisplayFor(modelitem => item.Product)
                    </td>
                    <td style="margin-right: 150px;">
                        @Html.DisplayFor(modelitem => item.DateIn)
                    </td>
                    <td style="margin-right: 150px">
                        @Html.DisplayFor(modelitem => item.Status)
                    </td>
                }
            </tr>
        }
    </table>
</div>