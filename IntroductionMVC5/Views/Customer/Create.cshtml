@model IntroductionMVC5.Models.Integrator.Customer

@{
    ViewBag.Title = "Create";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-1.10.2.js")" type="text/javascript"></script>


@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Customer</legend>
        <div class="form-group">
            @*            @Html.LabelFor(model => model.SupplierName)*@
            <label>Customer name</label>
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.CustomerName, new { @class = "form-control", @type = "text" })
            @Html.ValidationMessageFor(model => model.CustomerName)
        </div>

        <div class="form-group">
            <label>Customer code</label>
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.Suppliercode, new { @class = "form-control", @type = "text" })
            @Html.ValidationMessageFor(model => model.Suppliercode)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CompanyRegNumber)
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.CompanyRegNumber, new { @class = "form-control", @type = "text" })
            @Html.ValidationMessageFor(model => model.CompanyRegNumber)
        </div>

        @*        <div class="editor-label">*@
        @*            @Html.LabelFor(model => model.VatNumber)*@
        @*        </div>*@
        @*        <div class="editor-field">*@
        @*            @Html.EditorFor(model => model.VatNumber)*@
        @*            @Html.ValidationMessageFor(model => model.VatNumber)*@
        @*        </div>*@

        <div class="form-group">
            @Html.LabelFor(model => model.TellNumber)
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.TellNumber, new { @class = "form-control", @type = "text" })
            @Html.ValidationMessageFor(model => model.TellNumber)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Address)
        </div>
        <div class="form-group" >
            @Html.TextAreaFor(model => model.Address, new { @class = "form-control", @type = "text", @rows = "5" })
            @Html.ValidationMessageFor(model => model.Address)
        </div>

        <div class="form-group" style="display: none; visibility: hidden;">
            @Html.LabelFor(model => model.Logo)
        </div>
        <div class="form-group" style="display: none; visibility: hidden;">
            @Html.TextBoxFor(model => model.Logo)
            @Html.ValidationMessageFor(model => model.Logo)
        </div>
        <p>
            <button class="btn btn-primary" value="Back" onclick=" location.href='@Url.Action("Create", "Customer")' ">Create</button>
            <input class="btn btn-primary" type="button" onclick=" location.href='@Url.Action("Index", "Customer")' " value=" back" />
        </p>
    </fieldset>
}