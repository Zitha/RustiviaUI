@model IntroductionMVC5.Models.PastelInfo
@{
    ViewBag.Title = "Edit";
}
<script src="@Url.Content("~/Scripts/jquery-1.10.2.js")" type="text/javascript"></script>

<h2>Edit</h2>
@using (Html.BeginForm("Edit", "WeighBridge", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <div class="form-group" style="color: #5E5B54; font-size: large;">
            @string.Format("{0}", "Weightbridge number")
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.WeighBridgeInfo.Id, new { @readonly = "readonly", @style = "  color: #5E5B54; font-weight: bold; margin: 5px; padding-left: 2px", @class = "form-control", @type = "text" })
            @Html.ValidationMessageFor(model => model.WeighBridgeInfo.Id)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.WeighBridgeInfo.NettMass)
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.WeighBridgeInfo.NettMass, new { @readonly = "readonly", @style = "  color: #5E5B54; font-weight: bold; margin: 5px; padding-left: 2px", @class = "form-control", @type = "text" })
            @Html.ValidationMessageFor(model => model.WeighBridgeInfo.NettMass)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.PastelNumber)
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.PastelNumber, new { @style = "  color: #5E5B54; font-weight: bold; margin: 5px; padding-left: 2px", @class = "form-control", @type = "text" })
            @Html.ValidationMessageFor(model => model.PastelNumber)
        </div>
        <div class="form-group" style="color: #5E5B54; font-size: large;">
            @string.Format("{0}", "Payment type")
        </div>
        <div class="form-group">
            <p>
                @*                @Html.RadioButtonFor(m => m.WeighBridgeInfo.PaymentType, "Cheque")<label style="margin-right: 10px">Cheque</label>*@
                @*                @Html.RadioButtonFor(m => m.WeighBridgeInfo.PaymentType, "Transfer", new { @style = "margin-left: 20px" })<label>Transfer</label>*@
                @*                @Html.RadioButtonFor(m => m.WeighBridgeInfo.PaymentType, "Cash", new { @style = "margin-left: 20px;margin-bottom: 5px " })<label>Cash</label><br />*@
                @*                @Html.TextBoxFor(model => model.WeighBridgeInfo.PaymentReference, new { @required = "required", @placeholder = "Reference number", @style = "width:150px;  color: #5E5B54; font-weight: bold; margin: 5px; padding-left: 2px" })*@
            </p>
        </div>
        <div class="form-group" style="color: #5E5B54; font-size: large;">
            @string.Format("{0}", "Pastel file")
        </div>
        <div class="form-group">
            <input type="text" value='@string.Format("{0}", @Model.FileLocation.Split('\\').Last())' style="color: #5E5B54; font-weight: bold; margin: 5px; padding-left: 2px" readonly="readonly" class="form-control" />
            @Html.TextBox("PastelFile", "", new { type = "file", @style = "  color: #5E5B54; font-weight: bold; margin: 5px; padding-left: 2px", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.FileLocation)
        </div>
        <div class="form-group" style="color: #5E5B54; font-size: large;">
            @string.Format("{0}", "Vat file\\number")
        </div>
        <div class="form-group">
            <input type="text" value='@string.Format("{0}", @Model.VatFile.Split('\\').Last())' class="form-control" style="color: #5E5B54; font-weight: bold; margin: 5px; padding-left: 2px" />
            @Html.TextBox("VatFile", "", new { type = "file" })
            @Html.ValidationMessageFor(model => model.VatFile)
        </div>
        <p>
            <button class="btn btn-primary" value="Create" onclick=" location.href='@Url.Action("Edit", "WeighBridge")' ">Save</button>
            <input class="btn btn-primary" type="button" onclick=" location.href='@Url.Action("Processed", "WeighBridge")' " value=" back" />
        </p>
    </fieldset>
}