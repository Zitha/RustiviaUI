@model IntroductionMVC5.Models.Integrator.Purchase

@{
    ViewBag.Title = "Delete";
}
<script src="@Url.Content("~/Scripts/jquery-1.10.2.js")" type="text/javascript"></script>
<h2>Delete</h2>

<h3>Are you sure want to delete this?</h3>

<div>
    @using (Html.BeginForm("DeleteConfirmed", "WeighBridge", FormMethod.Post))
    {

        <table style="border-bottom: 1px dotted #8A8575; margin-bottom: 5px">
            <tr>
                <td>
                    <em style="color: #5E5B54; font-size: large; font-weight: bold;">Weigh bridge number:</em>
                </td>
                <td>
                    @Html.TextBoxFor(m => m.WeighBridgeInfo.Id, new { @readonly = "readonly", @style = "color: #5E5B54; font-weight: bold;" })
                </td>
            </tr>

            <tr>
                <td>
                    <em style="color: #5E5B54; font-size: large; font-weight: bold;">Nett mass:</em>
                </td>
                <td>
                    <input type="text" readonly="readonly" style="color: #5E5B54; font-weight: bold; margin: 5px; padding-left: 2px" value=' @Model.WeighBridgeInfo.NettMass ' />
                </td>
            </tr>
            <tr>
                <td>
                    <em style="color: #5E5B54; font-size: large; font-weight: bold;">Product:</em>
                </td>
                <td>
                    <input type="text" readonly="readonly" style="color: #5E5B54; font-weight: bold; margin: 5px; padding-left: 2px" value=' @Model.WeighBridgeInfo.Product ' />
                </td>
            </tr>
            <tr>
                <td>
                    <em style="color: #5E5B54; font-size: large; font-weight: bold;">First mass:</em>
                </td>
                <td>
                    <input type="text" readonly="readonly" style="color: #5E5B54; font-weight: bold; margin: 5px; padding-left: 2px" value=' @Model.WeighBridgeInfo.FirstMass ' />
                </td>
            </tr>
            <tr>
                <td>
                    <em style="color: #5E5B54; font-size: large; font-weight: bold;">Second mass:</em>
                </td>
                <td>
                    <input type="text" readonly="readonly" style="color: #5E5B54; font-weight: bold; margin: 5px; padding-left: 2px" value=' @Model.WeighBridgeInfo.SecondMass ' />
                </td>
            </tr>
            <tr>
                <td>
                    <em style="color: #5E5B54; font-size: large; font-weight: bold;">Comments:</em>
                </td>
                <td>
                    @Html.TextAreaFor(m => m.WeighBridgeInfo.Comments, new { @class = "form-control", @type = "text", @rows = "5", @style = "color: #5E5B54; font-weight: bold;" })
                </td>
            </tr>
        </table>
        <button value="Delete" class="btn btn-primary" onclick=" location.href='@Url.Action("DeleteConfirmed", "WeighBridge") ' ">Delete</button>
    }
</div>
