@model IntroductionMVC5.Models.PastelInfo
@{
    ViewBag.Title = "Edit";
}
<script src="@Url.Content("~/Scripts/jquery-1.10.2.js")" type="text/javascript"></script>

<h2>Edit</h2>
@using (Html.BeginForm("Edit", "Container", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <div class="form-group" style="color: #5E5B54; font-size: large;">
            @string.Format("{0}", "Weightbridge number")
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.WeighBridgeInfo.Id, new { @readonly = "readonly", @style = "  color: #5E5B54; font-weight: bold; margin: 5px; padding-left: 2px", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.WeighBridgeInfo.Id)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.WeighBridgeInfo.NettMass)
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.WeighBridgeInfo.NettMass, new { @readonly = "readonly", @style = "  color: #5E5B54; font-weight: bold; margin: 5px; padding-left: 2px", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.WeighBridgeInfo.NettMass)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.PastelNumber)
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.PastelNumber, new { @style = "  color: #5E5B54; font-weight: bold; margin: 5px; padding-left: 2px", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.PastelNumber)
        </div>
        <div class="form-group" style="color: #5E5B54; font-size: large;">
            @string.Format("{0}", "Pastel file")
        </div>
        <div class="form-group">
            <input type="text" value='@string.Format("{0}", @Model.FileLocation.Split('\\').Last())' class="form-control" style="color: #5E5B54; font-weight: bold; margin: 5px; padding-left: 2px" readonly="readonly" />
            @Html.TextBox("PastelFile", "", new { type = "file", @style = "  color: #5E5B54; font-weight: bold; margin: 5px; padding-left: 2px",@class="form-control" })
            @Html.ValidationMessageFor(model => model.FileLocation)
        </div>
        <p>
            <button class="btn btn-primary" value="Create" onclick=" location.href='@Url.Action("Edit", "Container")' ">Save</button>
            <input class="btn btn-primary" type="button" onclick=" location.href='@Url.Action("Processed", "Container")' " value=" back" />
        </p>
    </fieldset>
}