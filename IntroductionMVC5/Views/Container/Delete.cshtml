@model IntroductionMVC5.Models.Integrator.WeighBridgeInfo

@{
    ViewBag.Title = "Delete";
}
<script src="@Url.Content("~/Scripts/jquery-1.10.2.js")" type="text/javascript"></script>
<h2>Delete</h2>

<h3>Are you sure want to delete this?</h3>
<div>
    <table style="border-bottom: 1px dotted #8A8575; margin-bottom: 5px">
        <tr>
            <td>
                <em style="color: #5E5B54; font-size: large; font-weight: bold;">Weigh bridge number:</em>
            </td>
            <td>
                <input type="text" readonly="readonly" style="color: #5E5B54; font-weight: bold;
                margin: 5px; padding-left: 2px" value=' @Model.Id ' />
            </td>
        </tr>

        <tr>
            <td>
                <em style="color: #5E5B54; font-size: large; font-weight: bold;">Nett mass:</em>
            </td>
            <td>
                <input type="text" readonly="readonly" style="color: #5E5B54; font-weight: bold; margin: 5px; padding-left: 2px" value=' @Model.NettMass ' />
            </td>
        </tr>
        <tr>
            <td>
                <em style="color: #5E5B54; font-size: large; font-weight: bold;">Product:</em>
            </td>
            <td>
                <input type="text" readonly="readonly" style="color: #5E5B54; font-weight: bold; margin: 5px; padding-left: 2px" value=' @Model.Product ' />
            </td>
        </tr>
        <tr>
            <td>
                <em style="color: #5E5B54; font-size: large; font-weight: bold;">First mass:</em>
            </td>
            <td>
                <input type="text" readonly="readonly" style="color: #5E5B54; font-weight: bold; margin: 5px; padding-left: 2px" value=' @Model.FirstMass ' />
            </td>
        </tr>
        <tr>
            <td>
                <em style="color: #5E5B54; font-size: large; font-weight: bold;">Second mass:</em>
            </td>
            <td>
                <input type="text" readonly="readonly" style="color: #5E5B54; font-weight: bold; margin: 5px; padding-left: 2px" value=' @Model.SecondMass ' />
            </td>
        </tr>
    </table>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div id="linkButton" style="margin-top: 5px">
            <input class="btn btn-primary btn-sm" style="font-size: small;font-weight: lighter; " type="submit" value="Delete" id="button" />
            |
            <input class="btn btn-primary btn-sm" style="font-size: small;font-weight: lighter; " type="button" onclick=" location.href='@Url.Action("UnProcessed", "Container")    ' " value=" back" />
        </div>
    }
</div>