@model IntroductionMVC5.Models.Integrator.Driver
@{
    ViewBag.Title = "Edit";
}
<script src="@Url.Content("~/Scripts/jquery-1.10.2.js")" type="text/javascript"></script>

<h2>Edit</h2>
@using (Html.BeginForm("Edit", "Driver", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <div class="form-group">
            @Html.LabelFor(model => model.Firstname)
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.Firstname, new { @style = "  color: #5E5B54; font-weight: bold; margin: 5px; padding-left: 2px", @class = "form-control", @type = "text" })
            @Html.ValidationMessageFor(model => model.Firstname)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Surname)
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.Surname, new { @style = "  color: #5E5B54; font-weight: bold; margin: 5px; padding-left: 2px", @class = "form-control", @type = "text" })
            @Html.ValidationMessageFor(model => model.Surname)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.IdNumber)
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.IdNumber, new { @style = "  color: #5E5B54; font-weight: bold; margin: 5px; padding-left: 2px", @class = "form-control", @type = "text" })
            @Html.ValidationMessageFor(model => model.IdNumber)
        </div>
        <div class="form-group">
            <label>@string.Format("{0}", "ID/Passport file")</label>
        </div>
        <div class="form-group">
            <input type="text" value='@string.Format("{0}", @Model.IdLocation.Split('\\').Last())' c class="editor-field" style="color: #5E5B54; font-weight: bold; margin: 5px; padding-left: 2px" readonly="readonly" />
            @Html.TextBox("IdLocation", "", new { type = "file", @style = "  color: #5E5B54; font-weight: bold; margin: 5px; padding-left: 2px", })
            @Html.ValidationMessageFor(model => model.IdLocation)
        </div>
        <p>
            <button class="btn btn-primary" value="Create" onclick=" location.href='@Url.Action("Edit", "Driver")' ">Save</button>
            <input class="btn btn-primary" type="button" onclick=" location.href='@Url.Action("Details", "Driver", new { id = @Model.Id })' " value=" back" />
        </p>
    </fieldset>
}