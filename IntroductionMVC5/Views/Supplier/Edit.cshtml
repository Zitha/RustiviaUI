@model IntroductionMVC5.Models.Integrator.SupplierInfo
@{
    ViewBag.Title = "Edit";
}
<script src="@Url.Content("~/Scripts/jquery-1.10.2.js")" type="text/javascript"></script>

<h2>Edit</h2>
@using (Html.BeginForm("Edit", "Supplier", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <div class="form-group">
            <table>
                <tr>
                    <td>
                        <strong>Block Supplier?</strong>
                    </td>
                    <td>
                        @Html.CheckBoxFor(model => model.IsBlocked, new { @class = "checkbox" })
                    </td>
                </tr>
            </table>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SupplierName)
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.SupplierName, new { @style = "  color: #5E5B54; font-weight: bold; margin: 5px; padding-left: 2px", @class = "form-control", @type = "text" })
            @Html.ValidationMessageFor(model => model.SupplierName)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Suppliercode)
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.Suppliercode, new { @style = "  color: #5E5B54; font-weight: bold; margin: 5px; padding-left: 2px", @class = "form-control", @type = "text" })
            @Html.ValidationMessageFor(model => model.Suppliercode)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CompanyRegNumber)
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.CompanyRegNumber, new { @style = "  color: #5E5B54; font-weight: bold; margin: 5px; padding-left: 2px", @class = "form-control", @type = "text" })
            @Html.ValidationMessageFor(model => model.CompanyRegNumber)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.VatNumber)
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.VatNumber, new { @style = "  color: #5E5B54; font-weight: bold; margin: 5px; padding-left: 2px", @class = "form-control", @type = "text" })
            @Html.ValidationMessageFor(model => model.VatNumber)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.TellNumber)
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.TellNumber, new { @style = "  color: #5E5B54; font-weight: bold; margin: 5px; padding-left: 2px", @class = "form-control", @type = "text" })
            @Html.ValidationMessageFor(model => model.TellNumber)
        </div>
        <div class="form-group">
            @Html.DropDownList("UserId", (SelectList)ViewBag.Users, string.Empty, new { @class = "form-control" })
        </div>
        <p>
            <button class="btn btn-primary" value="Create" onclick=" location.href='@Url.Action("Edit", "Supplier")' ">Save</button>
            <input class="btn btn-primary" type="button" onclick=" location.href='@Url.Action("Details", "Supplier", new { id = @Model.Id })' " value=" back" />
        </p>
    </fieldset>
}