@model IntroductionMVC5.Models.Integrator.SupplierProduct


@Html.ValidationSummary(true)
<fieldset>
    <div class="form-group">
        @string.Format("{0}", "Product")
    </div>
    <div class="form-group">
        @Html.DropDownList("ProductId", (SelectList)ViewBag.Products, string.Empty, new { @id = "product", @class = "form-control" })
    </div>
    <div class="form-group">
        @string.Format("{0}", "Supplier Price")
    </div>
    <div class="form-group">
        @Html.TextBoxFor(model => model.SupplierPrice, new { @class = "form-control", @type = "text" })
    </div>
    <p>
        <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel" />
        <button value="Create" class="btn btn-primary" onclick=" location.href='@Url.Action("AddProduct", "Supplier")' ">Save</button>
    </p>
</fieldset>
