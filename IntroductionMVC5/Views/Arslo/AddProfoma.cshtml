@model IntroductionMVC5.Models.ArsloTrading.ArsloProfoma

@{
    ViewBag.Title = "Add Profoma";
}

<script type="text/javascript">
    var i = 1;
    function calculatePriceTotal() {

        for (a = 0; a < i; a++) {
            var itm = '#unitPrice' + a;

            var itmPrice = 1 * $(itm).val();
            var isitmPriceNumber = isNaN(itmPrice);

            if (isitmPriceNumber) {
                var replaceVal = $(itm).val().substr(0, $(itm).val().length - 1);
                $(itm).val(replaceVal);
                return;
            }

            var qty = '#quantity' + a;
            var qtyVal = 1 * $(qty).val();
            var isqtyValNumber = isNaN(qtyVal);
            if (isqtyValNumber) {
                var replaceVal = $(qty).val().substr(0, $(qty).val().length - 1);
                $(qty).val(replaceVal);
                return;
            }

            if (itmPrice && qtyVal) {
                var total = itmPrice * qtyVal;
                $('#unitTotalPrice' + a).val(total.toFixed(2));

                if (total > 0) {
                    $("#addProfomaBtn").removeAttr('disabled');
                }
            } else {
                $("#addProfomaBtn").attr('disabled', 'disabled');
            }
        }
        $("#itemCount").val(i);
    }

    $(document).ready(function () {
        var now = new Date();
        var month = (now.getMonth() + 1);
        var day = now.getDate();
        if (month < 10)
            month = "0" + month;
        if (day < 10)
            day = "0" + day;
        var today = now.getFullYear() + '/' + month + '/' + day;
        if (!$('#profomaDate').val()) {
            $('#profomaDate').val(today);
        }
        $('.datepicker').datepicker({
            autoclose: true,
            format: 'yyyy/mm/dd',
        }).on('changeDate', function (ev) {
            $('.datepicker').datepicker('hide');
        });
        //Profoma Rows Items
        $("#add_row").click(function () {
            $('#addr' + i).html("<td>" + (i + 1) +
                "</td><td><input id='description" + i + "' name='description" + i + "' type='text' placeholder='Item' class='form-control input-md'  /> </td><td><input  id='quantity" + i + "' type='text' placeholder='QTY' onkeyup='calculatePriceTotal()' name='quantity" + i + "'class='form-control'></td><td><input  id='unitPrice" + i + "' name='unitPrice" + i + "' type='text' placeholder='Price' onkeyup='calculatePriceTotal()' class='form-control'></td><td><input class='form-control input-md'id='unitTotalPrice" + i + "' name='unitTotalPrice" + i + "' type='number' readonly placeholder='Total Price'/></td>");

            $('#tab_logic').append('<tr id="addr' + (i + 1) + '"></tr>');
            i++;
            getTotal(i);
            $("#itemCount").val(i);
        });
        $("#delete_row").click(function () {
            if (i > 1) {
                $("#addr" + (i - 1)).html('');
                i--;
                getTotal(i);
                $("#itemCount").val(i);
            }
        });

        function getTotal(i) {
            var total = 0;
            for (a = 0; a < i; a++) {
                var itm = '#unitPrice' + a;
                var itmPrice = 1 * $(itm).val();
                var qty = '#quantity' + a;
                var qtyVal = 1 * $(qty).val();
                total = total + itmPrice * qtyVal;

                $('#total').val(total);
            }
        };

        $("#addProfomaBtn").attr('disabled', 'disabled');

    });
</script>

<h2>Add Profoma</h2>

@using (Html.BeginForm("AddProfoma", "Arslo", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <fieldset>
        <div class="row">
            <div class="col-xs-2">
                <label style="margin-top:5%">Profoma Number</label>
            </div>
            <div class="col-xs-3">
                @Html.TextBoxFor(model => model.ProfomaNumber, new { @class = "form-control", @type = "text", @readonly = "@readonly" })
                @Html.ValidationMessageFor(model => model.ProfomaNumber)
            </div>
            <div class="col-xs-2">
                <label style="margin-top:5%">UCR Number</label>
            </div>
            <div class="col-xs-4">
                @Html.TextBoxFor(model => model.UCRNumber, new { @class = "form-control", @type = "text", @readonly = "@readonly" })
                @Html.ValidationMessageFor(model => model.UCRNumber)
            </div>
        </div>
        <div class="row" style="margin-top:2%">
            <div class="col-xs-2">
                <label style="margin-top:5%">Date</label>
            </div>
            <div class="col-xs-3">
                @Html.TextBoxFor(model => model.Date, new { @class = "datepicker form-control", @type = "text", @id = "profomaDate" })
                @Html.ValidationMessageFor(model => model.Date)
            </div>
            <div class="col-xs-2">
                <label style="margin-top:5%">Status</label>
            </div>
            <div class="col-xs-4">
                @Html.DropDownList("Status", (SelectList)ViewBag.Status, string.Empty, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Status)
            </div>
        </div>
        <div class="row" style="margin-top:2%">
            <div class="col-xs-2">
                <label style="margin-top:5%">Customer</label>
            </div>
            <div class="col-xs-3">
                @Html.DropDownList("Customer.Id", (SelectList)ViewBag.Customers, string.Empty, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Customer)
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <table class="table table-bordered table-hover" id="tab_logic" style="margin-top:2%">
                    <thead>
                        <tr>
                            <th class="text-center">

                            </th>
                            <th class="text-center">
                                Description
                            </th>
                            <th class="text-center">
                                Quantity
                            </th>
                            <th class="text-center">
                                Unit Price
                            </th>
                            <th class="text-center">
                                Total Price
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr id='addr0'>
                            <td>1</td>
                            <td>
                                <input type="text" id='description0' name="description0" placeholder='Item' class="form-control" />
                            </td>
                            <td>
                                <input type="text" id='quantity0' onkeyup='calculatePriceTotal()' name="quantity0" placeholder='QTY' class="form-control" />
                            </td>
                            <td>
                                <input type="text" id='unitPrice0' onkeyup='calculatePriceTotal()' name="unitPrice0" placeholder='Price' class="form-control calcClass" />
                            </td>
                            <td>
                                <input type="number" id='unitTotalPrice0' readonly name="unitTotalPrice0" placeholder='Total Price' class="form-control" />
                            </td>
                        </tr>
                        <tr id='addr1'></tr>
                    </tbody>
                </table>
                <div class="row">
                    <div class="col-md-12">
                        <input id="itemCount" hidden="hidden" name="itemCount" />
                        <a id='delete_row' class="pull-right btn-mini btn btn-default" style="border:1px solid; border-color:red;">Delete Row</a>
                        <a id="add_row" class="btn btn-default btn-mini pull-right" style="border:1px solid; border-color:#94c523; margin-right:1px;">Add Row</a>
                    </div>
                </div>
            </div>
        </div>
        <p>
            <input type="button" class="btn btn-primary" onclick=" location.href='@Url.Action("Index", "Arslo")'" value="Back" />
            <button value="Create" class="btn btn-primary" id="addProfomaBtn" onclick=" location.href='@Url.Action("AddProfoma", "Arslo")'">Create</button>
        </p>
    </fieldset>
}

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background-color: orange">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel" style="color:white">Profoma Item</h4>
            </div>
            @using (Html.BeginForm("AddProfomaItem", "Arslo", FormMethod.Post))
            {
                <div class="modal-body">

                    <div class="form-group">
                        @{ Html.RenderPartial("_AddProfomaItem", new IntroductionMVC5.Models.ArsloTrading.ArsloProfomaItem { }); }
                    </div>
                </div>
                <div class="modal-footer">
                </div>
            }
        </div>
    </div>
</div>