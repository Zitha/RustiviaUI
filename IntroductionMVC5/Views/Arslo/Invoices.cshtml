@model List<IntroductionMVC5.Models.ArsloTrading.ArsloInvoice>

@{
    ViewBag.Title = "Invoices";
}
<script src="@Url.Content("~/Scripts/jquery-1.10.2.js")" type="text/javascript"></script>

<table style="border-bottom: 1px solid #5D5A53; float: left; width: 100%;">
    <tr>
        <td style="width: 50%">
            <input type="submit" class="btn btn-primary btn-sm" value="Generate Invoice" onclick=" location.href='@Url.Action("GenerateInvoice", "Arslo")    ' " />
        </td>
    </tr>
</table>

<div data-bind="template: {name:'customer', foreach:customers}" id="album-list" style="width: 100%">
</div>

<table class="table table-bordered">
    <thead>
        <tr class="info">
            <th>
                Invoice Reference
            </th>
            <th>
                Date
            </th>
            <th>
                POL
            </th>
            <th>
                POD
            </th>
            <th>

            </th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
    <tr class="active">
        <td>
            @Html.DisplayFor(modelItem => item.Reference)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PointOfLoading)
        </td>
        <td style="color:red">
            @Html.DisplayFor(modelItem => item.PointOfDelivery)
        </td>
        <td>
            <a class="btn btn-info btn-xs" onclick=" location.href='@Url.Action("InvoiceDetails", "Arslo", new { id = item.Id }) ' ">
                <i class="glyphicon glyphicon-download"></i> View Invoice
            </a>
        </td>
    </tr>
    }
</table>

