@model List<IntroductionMVC5.Models.ArsloTrading.ArsloProfoma>

@{
    ViewBag.Title = "Profomas";
    //Layout = "~/Views/Shared/_ArsloLayout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery-1.10.2.js")" type="text/javascript"></script>

<table style="border-bottom: 1px solid #5D5A53; float: left; width: 100%;">
    <tr>
        <td style="width: 50%">
            <input type="submit" class="btn btn-primary btn-sm" value="Add Proma" onclick=" location.href='@Url.Action("AddProfoma", "Arslo")    ' " />
        </td>
    </tr>
</table>


<div data-bind="template: {name:'customer', foreach:customers}" id="album-list" style="width: 100%">
</div>

<table class="table table-bordered">
    <thead>
        <tr class="info">
            <th>
                Customer
            </th>
            <th>
                Profoma Number
            </th>
            <th>
                UCR Number
            </th>
            <th>
                Date
            </th>
            <th>
                Status
            </th>
            <th></th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr class="active">
            <td>
                @Html.DisplayFor(modelItem => item.Customer.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProfomaNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UCRNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td style="color:red">
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <input type="button" class="btn btn-info btn-xs" value="Edit" onclick=" location.href='@Url.Action("EditProfoma", "Arslo", new { id = item.Id }) ' " />
                <input type="button" class="btn btn-info btn-xs" value="Details" onclick=" location.href='@Url.Action("ProfomaDetails", "Arslo", new { id = item.Id }) ' " />
            </td>
        </tr>
    }
</table>
