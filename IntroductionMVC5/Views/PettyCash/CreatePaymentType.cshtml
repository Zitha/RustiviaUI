@model IntroductionMVC5.Models.PettyCash.PaymentType


@using (Html.BeginForm("CreatePaymentType", "PettyCash", FormMethod.Post))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <div class="form-group">
            @Html.LabelFor(model => model.Type)
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.Type, new { @class = "form-control", @type = "text", @required = "true" })
            @Html.ValidationMessageFor(model => model.Type)
        </div>
        <p>
            <button value="Create" class="btn btn-primary" onclick=" location.href='@Url.Action("CreatePaymentType", "PettyCash")' ">Save</button>
            <input type="button" class="btn btn-primary" data-dismiss="modal" value=" Close" />
        </p>
    </fieldset>
}