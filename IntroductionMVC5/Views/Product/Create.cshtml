@model IntroductionMVC5.Models.Integrator.Product

@{
    ViewBag.Title = "Create";
}

<h2>Create Product</h2><hr />

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-1.10.2.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <div class="form-group">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @type = "text" })
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.RustiviaPrice)
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.RustiviaPrice, new { @class = "form-control", @type = "text" })
            @Html.ValidationMessageFor(model => model.RustiviaPrice)
        </div>
        <p>
            <button class="btn btn-primary" value="Back" onclick=" location.href='@Url.Action("Create", "Product")' ">Create</button>
            <input class="btn btn-primary" type="button" value="Back" onclick=" location.href='@Url.Action("Index", "Product")' " />
        </p>
        <p>
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-dismissable alert-danger" style="width: 50%">
                    <strong>@ViewBag.ErrorMessage</strong>
                </div>
            }
        </p>
    </fieldset>
}