@model TussoTechWebsite.Model.Resource

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <div class="form-group">
            <div class="form-group">
                @Html.TextAreaFor(model => model.Description, new
                {
                    @class = "form-control",
                    @type = "text",
                    @rows = "5",
                    @required = "required",
                    @placeholder = "Tender Information",
                })
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>

        <div class="form-group">
            @Html.TextBox("FileLocation", "", new
       {
           @type = "file",
           @id = "FileLocation",
           @required = "required"
       })
            @Html.ValidationMessageFor(model => model.Location)
        </div>
        <p>
            <button type="button" class="btn btn-default btn-mini" data-dismiss="modal">Close</button>
            <button type="submit" class="btn-system btn-mini" value="Save"><i class="fa fa-save"></i> Save</button>
        </p>
    </fieldset>
}