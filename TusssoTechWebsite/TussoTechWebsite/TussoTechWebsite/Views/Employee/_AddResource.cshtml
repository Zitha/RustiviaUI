@model TussoTechWebsite.Model.Resource

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <div class="form-group">
            @Html.TextBoxFor(model => model.Description, new
       {
           @class = "form-control",
           @type = "text",
           @placeholder = "Description",
           @required = "required"
       })
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="form-group">
            @Html.TextBox("FileLocation", "", new
       {
           @type = "file",
           @id="FileLocation",
           @required = "required"
           //@style = "width:450px"
       })
            @Html.ValidationMessageFor(model => model.Location)
        </div>
        <p>
            <button type="button" class="btn btn-default btn-mini" data-dismiss="modal">Close</button>
            <button type="submit" class="btn-system btn-mini" value="Save"><i class="fa fa-save"></i> Save</button>
        </p>
    </fieldset>
}