@model TussoTechWebsite.Model.CompanyDocument

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <div class="form-group">
            @Html.TextBoxFor(model => model.Name, new
            {
                @class = "form-control",
                @type = "text",
                @placeholder = "Document Name",
                @required = "required"
            })
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <div class="form-group">
            @Html.DropDownList("Type", (SelectList)ViewBag.DocumentTypes, string.Empty, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Type)
        </div>
        <div class="form-group">
            @Html.TextBox("FileLocation", "", new
       {
           @type = "file",
           @id = "FileLocation",
           @placeholder = "Document Type",
           @required = "required"
       })
            @Html.ValidationMessageFor(model => model.Location)
        </div>
        <p>
            <button type="button" class="btn btn-default btn-mini" data-dismiss="modal">Close</button>
            <button type="submit" class="btn-system btn-mini" value="Save"><i class="fa fa-save"></i> Save</button>
        </p>
    </fieldset>
}