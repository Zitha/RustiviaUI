@model TussoTechWebsite.Model.Customer

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <div class="form-group">
            <label>Customer Name</label>
        </div>
        <div class="form-group" hidden>
            @Html.TextBoxFor(model => model.Id, new
            {
                @class = "form-control",
                @type = "text"
            })
            @Html.ValidationMessageFor(model => model.Id)
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.Name, new
       {
           @class = "form-control",
           @type = "text",
           @placeholder = "Customer Name",
           @required = "required"
       })
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="form-group">
            <label>Contact</label>
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.Contact, new
       {
           @class = "form-control",
           @type = "text",
           @placeholder = "Contact",
           @required = "required"
       })
            @Html.ValidationMessageFor(model => model.Contact)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EmailAddress)
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.EmailAddress, new
       {
           @class = "form-control",
           @type = "text",
           @placeholder = "Email Address",
           @required = "required"
       })
            @Html.ValidationMessageFor(model => model.EmailAddress)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.VatNumber)
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.VatNumber, new
       {
           @class = "form-control",
           @type = "text",
           @placeholder = "VatNumber"
       })
            @Html.ValidationMessageFor(model => model.VatNumber)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Address)
        </div>
        <div class="form-group">
            @Html.TextAreaFor(model => model.Address, new
       {
           @class = "form-control",
           @type = "text",
           @rows = "5",
           @required = "required"
       })
            @Html.ValidationMessageFor(model => model.Address)
        </div>
        <p>
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button type="submit" class="btn-system btn-medium" value="Save"><i class="fa fa-save"></i> Save</button>
        </p>
    </fieldset>
}